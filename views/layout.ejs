<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.0/jquery.min.js"></script>

        <link rel="stylesheet" href="/css/layout.css">
        <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/footer.css">
        
        <%- style %>

    </head>
    <body>

        <!-- ye jo hm alag se _header.ejs or footer.ejs banaye h use include krna v toa h uska procedure neeche -->
        <%- include('_header'); -%>

        <!-- ye bs receive kr rha h flash message ko -->
        <!-- <% if(flash.success && flash.success.length > 0) { %>

            <h5>
               <%= flash.success %>
            </h5>

        <% } %>             -->


        <main id="layout-main">
            <%- body %>
        </main>
        <%- include('_footer'); -%>
        
        <%- script %>
        <!-- inlcuding noty -->
        <script>  
            <% if(flash.success && flash.success.length > 0) { %>
                new Noty({
                    theme: 'relax',
                    text: '<%= flash.success %>',
                    type: 'success',
                    layout: 'topRight',
                    timeout: 1500
                    
                }).show();
            <% } %>


            <% if(flash.error && flash.error.length > 0) { %>
                new Noty({
                    theme: 'relax',
                    text: '<%= flash.error %>',
                    type: 'error',
                    layout: 'topRight',
                    timeout: 1500
                    
                }).show();
            <% } %>
        </script>
    </body>
</html>